@article{Harte1999a,
  title = {Estimating Species-Area Relationships from Scale Plot to Landscape Data Using Species Spatial-Turnover},
  author = {Harte, John and Mccarthy, Sarah and Taylor, Kevin and Kinzig, Ann and Fischer, Marc L.},
